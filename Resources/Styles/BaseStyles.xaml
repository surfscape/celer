<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
                    >
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="15" />
    </Style>
    <Style
        x:Key="Heading1"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Control.FontSize" Value="28" />
        <Setter Property="Control.FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
    </Style>
    <Style
        x:Key="Heading2"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Control.FontSize" Value="20" />
        <Setter Property="Control.FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
    </Style>
    <Style
        x:Key="Subheading"
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Control.FontSize" Value="16" />
        <Setter Property="Foreground"
                Value="{DynamicResource TextFillColorSecondaryBrush}" />
    </Style>
    <Style x:Key="HeadingIcon" TargetType="{x:Type iconPacks:PackIconLucide}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type TextBlock}}, Path=Name}" Value="Heading2">
                <Setter Property="Width" Value="20" />
                <Setter Property="Height" Value="20" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="CelerStripTabLeft"
           TargetType="TabControl">
        <Setter Property="TabStripPlacement" Value="Left" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TabPanel
                            Grid.Column="0"
                            Margin="4,6,4,4"
                            Background="Transparent"
                            IsItemsHost="True" />
                        <Border
                            Grid.Column="1"
                            Padding="{TemplateBinding Padding}"
                               BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource LayerFillColorDefaultBrush}" 
                            BorderThickness="1,1,0,0"
                            CornerRadius="8,0,0,0">
                            <ContentPresenter
                                x:Name="TabContentPresenter"
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Content="{TemplateBinding SelectedContent}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="TabItem">
                    <Setter Property="MinWidth" Value="180"></Setter>
                    <Setter Property="Padding" Value="13,9,16,9" />
                    <Setter Property="Background"
                            Value="Transparent" />
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconLucide x:Name="Icon"
                                                              Kind="{Binding Icon}"
                                                              Margin="0,0,13,0"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock x:Name="Text"
                                               Text="{Binding Title}"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected}" Value="True">
                                        <Setter TargetName="Icon" Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <Setter TargetName="Text" Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsMouseOver}" Value="True" />
                                            <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected}" Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="Icon" Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <Setter TargetName="Text" Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </MultiDataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border x:Name="HeaderActive"
                                            HorizontalAlignment="Left"
                                            Width="3"
                                            Height="16"
                                            Panel.ZIndex="2"
                                            CornerRadius="3"></Border>
                                    <Border
                                        x:Name="HeaderBorder"
                                        Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Margin="0,2,0,2">
                                        <ContentPresenter
                                            x:Name="Content"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            ContentSource="Header"
                                            RecognizesAccessKey="True" />
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger SourceName="HeaderBorder"
                                             Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="HeaderBorder"
                                                Property="Background"
                                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter TargetName="HeaderBorder"
                                                Property="Background"
                                                Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                                        <Setter TargetName="HeaderActive"
                                                Property="Background"
                                                Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="{x:Type ListBox}">
        <Setter Property="BorderBrush" Value="{StaticResource Border}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style TargetType="Hyperlink">
        <Setter Property="Foreground"
                Value="{DynamicResource AccentTextFillColorPrimaryBrush}" />
    </Style>
</ResourceDictionary>