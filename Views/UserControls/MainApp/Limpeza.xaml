<UserControl
    x:Class="Celer.Views.UserControls.MainApp.Limpeza"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Celer.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:CleanEngine}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:MemorySizeConverter x:Key="MemorySizeConverter" />
    </UserControl.Resources>
    <Border Padding="16,16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Padding="0,0,0,16">
                <StackPanel>
                    <TextBlock Style="{StaticResource Heading1}">Cleaning</TextBlock>
                    <TextBlock Style="{StaticResource Subheading}">Delete temporary files, third party app cache, and other unnecessary files.</TextBlock>
                </StackPanel>
            </Border>
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.25*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0">
                    <Border>
                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" >
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Margin="0,0,12,2" IsExpanded="True">
                                            <Expander.Header>
                                                <TextBlock
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    Text="{Binding Name}" />
                                            </Expander.Header>
                                            <ItemsControl ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <DockPanel Margin="4">
                                                            <CheckBox
                                                                VerticalAlignment="Center"
                                                                Content="{Binding Name}"
                                                                IsChecked="{Binding IsChecked}"
                                                                ToolTip="{Binding Description}" />
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
                <Border Grid.Column="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="6" BorderThickness="1" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" Padding="8">
                <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock
                            Margin="0,0,0,8"
                            Style="{DynamicResource Heading2}"
                            Text="Log" />
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <ListBox
                            Name="LogListBox"
                            ItemsSource="{Binding LogEntries}"
                                     ScrollViewer.ScrollChanged="ScrollViewer_OnScrollChanged"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="IsHitTestVisible" Value="False" />
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                        Foreground="{Binding LogColor}"
                                        Text="{Binding LogEntry}"
                                        TextWrapping="Wrap" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <StackPanel Grid.Row="1">
                                <TextBlock
                            Margin="0,0,0,8"
                            Style="{DynamicResource CaptionTextBlockStyle}"        
                            Foreground="{StaticResource TextFillColorSecondaryBrush}"
                            Text="{Binding TotalFreedText, Converter={StaticResource MemorySizeConverter}, StringFormat=Space freed: {0}}" />
                                <Button
                            HorizontalAlignment="Center"
                            Command="{Binding CleanCommand}"
                            Content="Start Cleaning"
                            IsEnabled="{Binding CanClean}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
