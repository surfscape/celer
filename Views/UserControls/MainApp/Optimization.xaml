<UserControl
    x:Class="Celer.Views.UserControls.MainApp.Optimization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Celer.ViewModels"
    xmlns:local1="clr-namespace:Celer.Views.Components"
    d:DataContext="{d:DesignInstance Type=viewmodels:OptimizationViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <StackPanel>
            <local1:ModuleHeader 
                                 CurrentView="{Binding CurrentView}"
                                 ViewLabel="{Binding CurrentViewName}"
                                 ViewDescription="{Binding CurrentViewDescription}" />
            <Border Padding="16">
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border
                       Padding="0,0,0,16">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Heading1}">Optimization</TextBlock>
                            <TextBlock Style="{StaticResource Subheading}">Tools to help optimize your system</TextBlock>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <UniformGrid Margin="-10,-5,0,0" Columns="1">
                            <UniformGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                    <Setter Property="Margin" Value="10,10,0,0" />
                                    <Setter Property="Padding" Value="16" />
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                                </Style>
                            </UniformGrid.Resources>
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Battery"
                                                 Label="Battery Manager"
                                                 Description="Check the state of your computer battery, and change system power plans"
                                                 Icon="Battery" />
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Memory"
                                                 Label="Memory Manager"
                                                 Description="Check, clean, and configure memory behaviour"
                                                 Icon="MemoryStick" />
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Video"
                                                 Label="Video Manager"
                                                 Description="GPU and DWM settings"
                                                 Icon="Gpu" />
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Sensors"
                                                 Label="Sensors"
                                                 Description="View your system sensors in real-time"
                                                 Icon="Thermometer" />
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
