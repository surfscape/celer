<UserControl
    x:Class="Celer.Views.UserControls.MainApp.Manutencao"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Celer.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ManutencaoViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <Border Padding="12,6">
        <StackPanel>

            <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Style="{StaticResource TransparentButton}"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Main">
                        <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconLucide
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SecondaryText}"
                                Kind="ArrowLeft" />
                        <TextBlock Text="Voltar" />
                        </StackPanel>
                    </Button>

                    <TextBlock Text="{Binding CurrentViewName}" />
                </StackPanel>
                <ContentControl Content="{Binding CurrentView}" />
            </StackPanel>

            <Grid Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Margin="0,0,0,6"
                    Padding="0,0,0,6"
                    BorderBrush="Gray"
                    BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Style="{StaticResource Heading1}">Manutenção &amp; Recuperação</TextBlock>
                        <TextBlock Style="{StaticResource Subheading}">Ferramentas para realizar manutenção do sistema e também a sua recuperação</TextBlock>
                    </StackPanel>
                </Border>
                <StackPanel Grid.Row="1">
                    <UniformGrid Margin="-10,-5,0,0" Columns="2">
                        <UniformGrid.Resources>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                <Setter Property="Margin" Value="10,10,0,0" />
                                <Setter Property="Padding" Value="12" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="VerticalContentAlignment" Value="Top" />
                            </Style>
                        </UniformGrid.Resources>

                        <Button Command="{Binding NavigateCommand}" CommandParameter="SystemRepair">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,4" Orientation="Horizontal">
                                    <iconPacks:PackIconLucide
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource SecondaryText}"
                                        Kind="Wrench" />
                                    <TextBlock FontSize="18" Foreground="white">Diagnóstico e Reparação do Sistema</TextBlock>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap">Realiza diferentes checks para a reparação de diversos componentes do sistema operativo</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding NavigateCommand}" CommandParameter="GraphicsManager">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,4" Orientation="Horizontal">
                                    <iconPacks:PackIconLucide
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource SecondaryText}"
                                        Kind="MonitorCheck" />
                                    <TextBlock FontSize="18" Foreground="white">Gestor Gráfico</TextBlock>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap">Configurações do adaptador gráfico e do gestor de janelas do Windows</TextBlock>
                            </StackPanel>
                        </Button>

                    </UniformGrid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
