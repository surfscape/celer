<UserControl x:Class="Celer.Views.UserControls.MainApp.Maintenance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
             xmlns:converters="clr-namespace:Celer.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <StackPanel>
            <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}}">
                <Border CornerRadius="6,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button Margin="0,0,8,0"
                                Padding="16,10"
                                HorizontalAlignment="Center"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Main"
                                Style="{StaticResource TransparentButton}">
                            <iconPacks:PackIconLucide Margin="0"
                                                      VerticalAlignment="Center"
                                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                      Kind="ArrowLeft" />
                        </Button>
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="17"
                                   FontWeight="DemiBold"
                                   Foreground="White"
                                   Text="{Binding CurrentViewName}" />
                    </StackPanel>
                </Border>
                <Border Padding="12">
                    <ContentControl Content="{Binding CurrentView}" />
                </Border>
            </StackPanel>
            <Border Padding="16">
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Padding="0,0,0,16">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Heading1}">Maintenance</TextBlock>
                            <TextBlock Style="{StaticResource Subheading}">Tools to verify and fix the system</TextBlock>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <UniformGrid Margin="-10,-5,0,0"
                                     Columns="1">
                            <UniformGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type Button}}"
                                       TargetType="Button">
                                    <Setter Property="Margin"
                                            Value="10,10,0,0" />
                                    <Setter Property="Padding"
                                            Value="12" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Left" />
                                    <Setter Property="VerticalContentAlignment"
                                            Value="Top" />
                                    <Setter Property="HorizontalAlignment"
                                            Value="Stretch" />
                                    <Setter Property="VerticalAlignment"
                                            Value="Stretch" />
                                </Style>
                            </UniformGrid.Resources>
                            <Button Command="{Binding NavigateCommand}"
                                    CommandParameter="Repair">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,4"
                                                Orientation="Horizontal">
                                        <iconPacks:PackIconLucide Width="20"
                                                                  Height="20"
                                                                  Margin="0,0,8,0"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                  Kind="Wrench" />
                                        <TextBlock FontSize="18"
                                                   Foreground="white">Diagnóstico e Reparação do Sistema</TextBlock>
                                    </StackPanel>
                                    <TextBlock TextWrapping="Wrap">Realiza diferentes checks para a reparação de diversos componentes do sistema operativo</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding NavigateCommand}"
                                    CommandParameter="Network">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,4"
                                                Orientation="Horizontal">
                                        <iconPacks:PackIconLucide Width="20"
                                                                  Height="20"
                                                                  Margin="0,0,8,0"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                  Kind="Network" />
                                        <TextBlock FontSize="18"
                                                   Foreground="white">Testar Internet</TextBlock>
                                    </StackPanel>
                                    <TextBlock TextWrapping="Wrap">Realiza diferentes checks para detetar e resolver problemas com rede e internet</TextBlock>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
