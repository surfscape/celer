<UserControl x:Class="Celer.Views.UserControls.MainApp.Maintenance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
             xmlns:converters="clr-namespace:Celer.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local1="clr-namespace:Celer.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <StackPanel>
            <local1:ModuleHeader NavigateCommand="{Binding NavigateCommand}"
                                 CurrentView="{Binding CurrentView}"
                                 ViewLabel="{Binding CurrentViewName}" />
            <Border Padding="16">
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Padding="0,0,0,16">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Heading1}">Maintenance</TextBlock>
                            <TextBlock Style="{StaticResource Subheading}">Tools to verify and fix the system</TextBlock>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <UniformGrid Margin="-10,-5,0,0"
                                     Columns="1">
                            <UniformGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type Button}}"
                                       TargetType="Button">
                                    <Setter Property="Margin"
                                            Value="10,10,0,0" />
                                    <Setter Property="Padding"
                                            Value="16" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Left" />
                                    <Setter Property="VerticalContentAlignment"
                                            Value="Top" />
                                    <Setter Property="HorizontalAlignment"
                                            Value="Stretch" />
                                    <Setter Property="VerticalAlignment"
                                            Value="Stretch" />
                                </Style>
                            </UniformGrid.Resources>
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Repair"
                                                 Label="Repair System"
                                                 Description="Run the official system repair utilities to repair erros in the disk/image"
                                                 Icon="Wrench" />
                            <local1:ModuleButton NavigateCommand="{Binding NavigateCommand}"
                                                 NavigateTo="Network"
                                                 Label="Network Manager"
                                                 Description="Check your network connection and change it's DNS"
                                                 Icon="Network" />
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
