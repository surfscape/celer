<UserControl
    x:Class="Celer.Views.UserControls.MainApp.ManutencaoViews.Realtek"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp.ManutencaoViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <GroupBox Header="Diagnóstico Inicial">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding DriverStatus}" />
                    <TextBlock Text="{Binding AudioServiceStatus}" />
                    <Button
                        Width="200"
                        Command="{Binding RunDiagnosticsCommand}"
                        Content="Executar Diagnóstico" />
                </StackPanel>
            </GroupBox>


            <GroupBox Header="Reparação Rápida">
                <StackPanel Margin="10">
                    <Button Command="{Binding RestartAudioServicesCommand}" Content="Reiniciar Serviços de Áudio" />
                    <Button Command="{Binding EnableRealtekDeviceCommand}" Content="Reativar Dispositivo Realtek" />
                </StackPanel>
            </GroupBox>


            <GroupBox Header="Gestão de Drivers">
                <StackPanel Margin="10">
                    <Button Command="{Binding UninstallDriverCommand}" Content="Desinstalar Driver Atual" />
                    <Button Command="{Binding InstallOfficialDriverCommand}" Content="Instalar Driver Oficial" />
                    <Button Command="{Binding InstallAAFDriverCommand}" Content="Instalar Driver Modificado (AAF)" />
                </StackPanel>
            </GroupBox>


            <GroupBox Header="Estado Atual">
                <TextBlock
                    Margin="10"
                    Text="{Binding CurrentStatusMessage}"
                    TextWrapping="Wrap" />
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
