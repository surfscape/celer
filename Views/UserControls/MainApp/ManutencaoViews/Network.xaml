<UserControl
    x:Class="Celer.Views.UserControls.MainApp.ManutencaoViews.Network"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp.ManutencaoViews"
    xmlns:manutencaovm="clr-namespace:Celer.ViewModels.ManutencaoVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=manutencaovm:NetworkViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox FontWeight="SemiBold" Header="Estado da Rede">
            <StackPanel Margin="10">
                <Button
                    Width="200"
                    Height="35"
                    HorizontalAlignment="Left"
                    Command="{Binding TestNetworkCommand}"
                    Content="Testar Conectividade" />
                <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Adaptadores de Rede:" />
                    <TextBlock Margin="10,0,0,0" Text="{Binding NetworkAdaptersStatus}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontWeight="Bold"
                        Text="Conexão Ativa:" />
                    <TextBlock Margin="10,0,0,0" Text="{Binding ConnectionStatus}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontWeight="Bold"
                        Text="Acesso à Internet:" />
                    <TextBlock Margin="10,0,0,0" Text="{Binding InternetStatus}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Rectangle
            Grid.Row="1"
            Height="1"
            Fill="Gray" />
        <GroupBox
            Grid.Row="2"
            FontWeight="SemiBold"
            Header="Servidores DNS Populares">
            <StackPanel Margin="10">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ComboBox
                        Width="300"
                        Height="30"
                        ItemsSource="{Binding DnsServers}"
                        SelectedItem="{Binding SelectedDnsServer}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding IP}" />
                                    <TextBlock Text=" (" />
                                    <TextBlock Text="{Binding Ping}" />
                                    <TextBlock Text=" ms)" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button
                        Margin="10,0,0,0"
                        Command="{Binding UpdatePingCommand}"
                        Content="Atualizar Ping" />
                    <StackPanel Margin="8,0,0,0" Orientation="Horizontal">
                        <Button
                            Command="{Binding SetDnsCommand}"
                            Content="Definir como DNS do Sistema"
                            IsEnabled="{Binding SelectedDnsServer, Converter={StaticResource NullToBoolConverter}}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,10,0,0">
                    <TextBlock FontWeight="Bold" Text="Detalhes do Servidor DNS:" />
                    <TextBlock Text="{Binding SelectedDnsServerDescription}" TextWrapping="Wrap" />

                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
