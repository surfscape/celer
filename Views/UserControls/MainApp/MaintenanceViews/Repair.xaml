<UserControl
    x:Class="Celer.Views.UserControls.MainApp.MaintenanceViews.Repair"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp.MaintenanceViews"
    xmlns:maintenancevm="clr-namespace:Celer.ViewModels.MaintenanceVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=maintenancevm:RepairViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ListBox Margin="0,6,0,0"
         ItemsSource="{Binding RepairSteps}"
         HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="4,6">
                            <CheckBox IsChecked="{Binding IsSelected}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch">
                                <StackPanel Margin="4,0,0,0">
                                    <WrapPanel Margin="0,0,0,8">
                                        <TextBlock
                                FontSize="16"
                                FontWeight="DemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Description}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </WrapPanel>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <ProgressBar
                                
                                Maximum="100"
                                Minimum="0"
                                Value="{Binding Progress}"
                                Height="14"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                 />

                                        <TextBlock
                                Grid.Row="1"
                                FontSize="12"
                                            Margin="0,6,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding StatusMessage}" />
                                    </Grid>
                                </StackPanel>
                            </CheckBox>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button
                    Margin="0,8,0,0"
                    Command="{Binding ToggleSelectAllCommand}"
                    Content="Select/Deselect All Tasks"
                HorizontalAlignment="Right"
                />
            <TextBlock Style="{DynamicResource Heading2}" Margin="0,8">Total Progress</TextBlock>
            <ProgressBar
                Margin="0,0,0,10"
                Maximum="100"
                Minimum="0"
                Value="{Binding OverallProgress}" />

            <Button Margin="0,0,0,10" HorizontalAlignment="Center"
                Command="{Binding StartRepairCommand}"
                Content="Start Repair" />
            </StackPanel>
    </Grid>
</UserControl>
