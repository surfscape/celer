<UserControl
    x:Class="Celer.Views.UserControls.MainApp.Privacidade"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Celer.Views.UserControls.MainApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <TabControl Style="{StaticResource CelerStripTabLeft}" TabStripPlacement="Left">
        <TabControl.Resources>
            <Style TargetType="{x:Type iconPacks:PackIconLucide}">
                <Setter Property="Margin" Value="0,0,10,0" />
                <Setter Property="Width" Value="14" />
                <Setter Property="Height" Value="14" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{DynamicResource SecondaryText}" />
            </Style>
        </TabControl.Resources>
        <TabItem HorizontalContentAlignment="Left">
            <TabItem.Header>
                <DockPanel>
                    <iconPacks:PackIconLucide Kind="Settings" />
                    <TextBlock>Overview</TextBlock>
                </DockPanel>
            </TabItem.Header>
            <Border Padding="12,6">
                <StackPanel
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Orientation="Vertical">
                    <Border
                        Margin="0,0,0,6"
                        Padding="0,0,0,6"
                        BorderBrush="Gray"
                        BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Heading1}">Vista Geral</TextBlock>
                            <TextBlock Style="{StaticResource Subheading}">Informação geral de privacidade e segurança do sistema</TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconLucide Kind="Settings" />
                    <TextBlock>Configurações</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <Border Padding="12,6">
                <StackPanel
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Orientation="Vertical">
                    <Border
                        Margin="0,0,0,6"
                        Padding="0,0,0,6"
                        BorderBrush="Gray"
                        BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Heading1}">Configurações</TextBlock>
                            <TextBlock Style="{StaticResource Subheading}">Variedades de configurações do Windows relacionadas a segurança e privacidade</TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </TabItem>

    </TabControl>
</UserControl>
