<UserControl
    x:Class="Celer.Views.UserControls.MainApp.OptimizationViews.Sensors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Optimizationvm="clr-namespace:Celer.ViewModels.OptimizationVM"
             xmlns:components="clr-namespace:Celer.Views.Components"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>
    <Grid Focusable="False">
        <components:ModuleLoadingStatus Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"></components:ModuleLoadingStatus>
        <DockPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}, ConverterParameter=True}" Focusable="False">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,-16,0" >
                <ItemsControl ItemsSource="{Binding Categories}" Margin="-8,-8,8,8" Focusable="False">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" Margin="8" Focusable="False" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Margin="0,0,8,0" IsExpanded="{Binding IsExpanded}" VerticalAlignment="Top">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconLucide
                                        Width="17"
                                        Height="17"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Kind="{Binding Icon}" />
                                    <TextBlock FontSize="17" Text="{Binding Name}" />
                                </StackPanel>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding Sensors}" Focusable="False">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate >
                                        <DockPanel Margin="5" Focusable="False">
                                            <TextBlock Width="200" Text="{Binding Name}" />
                                            <TextBlock FontWeight="Bold" Text="{Binding Value}" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        </DockPanel>
    </Grid>


</UserControl>
