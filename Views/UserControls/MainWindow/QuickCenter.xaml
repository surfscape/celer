<UserControl x:Class="Celer.Views.UserControls.MainWindow.QuickCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celer.Views.UserControls.MainWindow"
             xmlns:converters="clr-namespace:Celer.Converters"
             d:DataContext="{d:DesignInstance Type=local:QuickCenterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InvertBoolean x:Key="InvertBool" />
    </UserControl.Resources>
    <Grid>
        <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6"
                MinWidth="270"
                Padding="12,8,12,12">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Heading1}"
                           Margin="0"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}">Celer</TextBlock>
                    <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center" Margin="8,0,0,0">beta</TextBlock>
                </StackPanel>
                <TextBlock FontSize="15"
                           Grid.Row="1"
                           Margin="0,-2,0,16"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Text="Quickly manage your system" />
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="HorizontalAlignment"
                                    Value="Stretch"></Setter>
                            <Setter Property="Margin"
                                    Value="0,0,0,6"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Button Command="{Binding DeleteTempFilesCommand}"
                            IsEnabled="{Binding IsCleaning, Converter={StaticResource InvertBool}}">Delete Temporary Files</Button>
                    <StackPanel Visibility="{Binding IsCleaning, Converter={StaticResource BoolToVisConverter}}">
                        <ProgressBar Value="{Binding TempFilesCleaned}"
                                     Maximum="{Binding TempFiles}"></ProgressBar>
                        <TextBlock Text="{Binding TempFilesCleaned, StringFormat=Cleaned {0}MB}"
                                   Margin="0,4"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <Button Margin="0" IsEnabled="{Binding CanRecycleBin}" Command="{Binding EmptyRecycleBinCommand}">Empty Recycle Bin</Button>
                    <StackPanel Visibility="{Binding IsRecycleBin, Converter={StaticResource BoolToVisConverter}}">
                        <ProgressBar Value="{Binding RecycleCleaned}"
                                     Maximum="{Binding RecycleTotalSize}"></ProgressBar>
                        <TextBlock Text="{Binding RecycleCleaned, StringFormat=Cleaned {0}MB}"
                                   Margin="0,4"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <Separator Margin="0,8"></Separator>
                    <Button Background="Transparent"
                            Command="{Binding QCExitAppCommand}">
                        <TextBlock FontSize="13"
                                   Foreground="{DynamicResource SystemFillColorCriticalBrush}">Exit Celer</TextBlock>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
