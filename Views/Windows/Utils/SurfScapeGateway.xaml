<Window
    x:Class="Celer.Views.Windows.Utils.SurfScapeGateway"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.Windows.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SurfScape Gateway - A procurar atualizações"
    Width="350"
    Height="150"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderBrush="{DynamicResource Primary}" BorderThickness="1">
        <StackPanel
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,10"
                Text="{Binding CurrentTask}"
                TextAlignment="Center" />
            <ProgressBar
                Height="8"
                HorizontalContentAlignment="Stretch"
                IsIndeterminate="True" />
        </StackPanel>
    </Border>
</Window>
