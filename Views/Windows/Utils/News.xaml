<Window
    x:Class="Celer.Views.Windows.Utils.News"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.Windows.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="News"
    Width="600"
    Height="350"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderBrush="{DynamicResource Primary}" BorderThickness="1">
        <Border Padding="12">
            <StackPanel>
                <TextBlock Margin="0,0,0,8" Style="{StaticResource Heading1}">Novidades</TextBlock>
                <TextBlock Foreground="white">Versão 1.0.0-beta.1 "Orion"</TextBlock>
                <Border
                    Margin="0,8,0,8"
                    BorderBrush="{DynamicResource Border}"
                    BorderThickness="0,1,0,0" />
                <TextBlock Margin="0,0,0,6" Style="{StaticResource Subheading}">Bem-vindo á primeira versão beta pública  do Celer!</TextBlock>
                <StackPanel>
                    <TextBlock Style="{StaticResource Heading2}" Text="Funcionalidades" />
                    <TextBlock TextWrapping="Wrap">
                        • Dashboard completamente funcional<LineBreak />
                        • Limpeza avançada<LineBreak />
                        • Gestor de energia com planos de energia</TextBlock>

                    <TextBlock
                        Margin="0,6,0,6"
                        Style="{StaticResource Heading2}"
                        Text="Bugs" />
                    <TextBlock TextWrapping="Wrap">
                        • Maior estabilidade nos módulos de sensores e vídeo<LineBreak />
                        • Inclusão da funcionalidade de internet e conectividade</TextBlock>
                </StackPanel>
                <Button
                    Width="150"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Click="Close_Click">
                    Fechar
                </Button>
            </StackPanel>
        </Border>
    </Border>
</Window>
