<Window
    x:Class="Celer.Views.Windows.Utils.AmbientChecker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.Windows.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:converters="clr-namespace:Celer.Converters"
    xmlns:resx="clr-namespace:Celer.Resources.i18n"
    Title="{x:Static resx:Strings.AmbientChecker_Title}"
    Width="600"
    SizeToContent="Height"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Border Padding="15">
        <StackPanel>
            <TextBlock Style="{StaticResource Heading1}" Text="{x:Static resx:Strings.AmbientChecker_Title}"></TextBlock>
            <TextBlock FontSize="15"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="0,-4,0,16"
                       TextWrapping="Wrap" Text="{x:Static resx:Strings.AmbientChecker_Description}"></TextBlock>
            <ItemsControl x:Name="ChecksList" Margin="0,0,0,15">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       FontFamily="Segoe UI Symbol">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text"
                                                Value="❓" />
                                        <Setter Property="Foreground"
                                                Value="Gray" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}"
                                                         Value="Success">
                                                <Setter Property="Text"
                                                        Value="✔️" />
                                                <Setter Property="Foreground"
                                                        Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}"
                                                         Value="Failure">
                                                <Setter Property="Text"
                                                        Value="❌" />
                                                <Setter Property="Foreground"
                                                        Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Message}"
                                       VerticalAlignment="Center"
                                       FontStyle="Italic"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button 
                x:Name="StartCheckButton"
                MaxWidth="250" 
                HorizontalAlignment="Center" 
                Click="StartCheck_Click" Content="{x:Static resx:Strings.AmbientChecker_StartLabel}"></Button>
        </StackPanel>
    </Border>
</Window>