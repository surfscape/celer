<Window
    x:Class="Celer.Views.Windows.Utils.AmbientChecker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Celer.Views.Windows.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Verificação de Ambiente"
    Width="600"
    Height="200"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Border Padding="10">
        <StackPanel>
            <TextBlock Style="{StaticResource Heading1}">Verificação de ambiente</TextBlock>
            <TextBlock Margin="0,0,0,8" Style="{StaticResource Subheading}">Verique se o Celer consegue utilizar ferramentas do sistema operativo.</TextBlock>
            <Button MaxWidth="250" HorizontalAlignment="Left">Começar verificação</Button>
        </StackPanel>
    </Border>
</Window>
