
<Window
    x:Class="Celer.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Celer.Views.Windows"
    xmlns:uc="clr-namespace:Celer.Views.UserControls.MainApp"
    Title="Celer"
    Width="980"
    Height="640"
    MinWidth="940"
    MinHeight="600"
    Style="{StaticResource {x:Type Window}}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding MenuBarControl}" />
        <Border Grid.Row="1">
            <Grid Margin="0,4,0,0">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}" Style="{StaticResource CelerStripTab}">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type iconPacks:PackIconLucide}">
                            <Setter Property="Margin" Value="0,0,8,0" />
                            <Setter Property="Width" Value="14" />
                            <Setter Property="Height" Value="14" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}" />
                        </Style>
                    </TabControl.Resources>
                    <TabItem x:Name="Dashboard">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Estado" Icon="Settings" />
                        </TabItem.Header>
                        <ContentControl HorizontalAlignment="Stretch" Content="{Binding DashboardControl}" />
                    </TabItem>
                    <TabItem x:Name="Limpeza">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Limpeza" Icon="Trash2" />
                        </TabItem.Header>
                        <uc:Limpeza HorizontalAlignment="Stretch" />
                    </TabItem>
                    <TabItem x:Name="Otimizacao">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Otimização" Icon="Rocket" />
                        </TabItem.Header>
                        <ContentControl HorizontalAlignment="Stretch" Content="{Binding OtimizaoControl}" />
                    </TabItem>
                    <TabItem x:Name="Manutencao">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Manutenção e Recuperação" Icon="Construction" />
                        </TabItem.Header>
                        <ContentControl HorizontalAlignment="Stretch" Content="{Binding ManutencaoControl}" />
                    </TabItem>
                    <TabItem x:Name="Privacidade">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Privacidade e Segurança" Icon="Shield" />
                        </TabItem.Header>
                        <uc:Privacidade HorizontalAlignment="Stretch" />
                    </TabItem>
                    <TabItem x:Name="Avancado">
                        <TabItem.Header>
                            <local:TabHeaderData Title="Avançado" Icon="PocketKnife" />
                        </TabItem.Header>
                        <StackPanel />
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>

