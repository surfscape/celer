<UserControl x:Class="Celer.Views.Components.ModuleHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celer.Views.Components"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:Celer.Converters"
             x:Name="Root"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ElementName=Root}">
        <Border CornerRadius="6,0,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch">
                <Button Margin="0,0,16,0"
                        Padding="16,12"
                        VerticalAlignment="Top"
                        Command="{Binding NavigateCommand, ElementName=Root}"
                        CommandParameter="Main"
                        Style="{StaticResource TransparentButton}">
                    <iconPacks:PackIconLucide Margin="0"
                                              Width="12"
                                              Height="12"
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Kind="ArrowLeft" />
                </Button>
                <TextBlock FontSize="18"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Text="{Binding ViewLabel, ElementName=Root}" />

            </StackPanel>
        </Border>
        <Border Padding="16,8,16,16">
            <ContentControl Content="{Binding CurrentView, ElementName=Root}" />
        </Border>
    </StackPanel>
</UserControl>
